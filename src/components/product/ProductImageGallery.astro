---
const { images } = Astro.props;
---

<div class="grid gap-4 md:grid-cols-8 lg:gap-6">
  <div class="md:order-2 md:col-span-6">
    <img
      class="overflow-hidden rounded-lg h-full object-cover"
      src={images?.nodes[0]?.url}
    />
  </div>
  <div
    class:list={[
      "grid",
      "grid-cols-4",
      "gap-4",
      "md:order-1",
      "md:col-span-2",
      "md:flex",
      "md:flex-col",
      "md:gap-6",
      { "md:justify-between": images.nodes.length > 2 },
    ]}
  >
    {
      images.nodes.map((image, index) => {
        if (index < 3) {
          return (
            <div class="overflow-hidden rounded-lg">
              <img src={image?.url} />
              {/*<ShopifyImage
                classList=""
                loading="eager"
                image={image}
                sizes={`
                  (min-width: 1540px) 475px,
                  (min-width: 1280px) 389px,
                  304px
                `}
                />*/}
            </div>
          );
        }
      })
    }
  </div>
</div>
